<html lang="en">
    <body>
        <%- include('./partials/nav.ejs') %>
        <%- include('./partials/logout.ejs') %>
        <div class="content">
            <h3>Hello <%= name %> | Acount Info --- <%= email %> --- user login id:  <%= id %> </h3>
            <hr>
        </div>
        <form action="/results" method="POST">
            <h3>from mongo data base</h3>
            <b>Results: [<%= theSearches.length %>] for keyword searched; "<%= search %>" </b></br> <br> <br> <br>
            
            <% if (theSearches.length > 0) { %>
                <% theSearches.forEach(search => { %>
                    <b> - <%= search.year %> <%= search.brand %> <%= search.model %> <%= search.cost %></b> <br>
                    <p> <%= search.colour %> <%= search.vin %> <br>
                        <%= search.country %> <%= search.city %> <%= search.address %>
                    </p> 
                    
                    <% }) %>
            <% } %>
        </br>
    </body>
</html>
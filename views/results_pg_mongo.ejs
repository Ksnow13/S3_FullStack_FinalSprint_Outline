<html lang="en">
    <style>
        .container{
            display: grid;
            grid-template-columns: repeat(2, 1fr);
        }
    </style>
    <body>
        <%- include('./partials/nav.ejs') %>
        <%- include('./partials/logout.ejs') %>
        <div class="content">
            <h3>Hello <%= name %> | Acount Info --- <%= email %> --- user login id:  <%= id %> </h3>
            <hr>
        </div>
        <h3>Results from <%= theDb %> </h3>
        <div class="container">
        <div class="mongo">
        <form action="/results_pg_mongo" method="POST">
            <h3>from mongo data base</h3>
            <b>Results: [<%= theSearchesMongo.length %>] for keyword searched; "<%= search %>" </b></br> <br> <br> <br>
            
            <% if (theSearchesMongo.length > 0) { %>
                <% theSearchesMongo.forEach(search => { %>
                    <b> - <%= search.year %> <%= search.brand %> <%= search.model %> <%= search.cost %></b> <br>
                    <p> <%= search.colour %> <%= search.vin %> <br>
                        <%= search.country %> <%= search.city %> <%= search.address %>
                    </p> 
                    
                    <% }) %>
            <% } %>
        </br>
        </div>
        <div class="postgres">
            <h3>from postgres data base</h3>
            <b>Results: [<%= theSearchesPG.length %>] for keyword searched; "<%= search %>" </b></br> <br> <br> <br>
            
            <% if (theSearchesPG.length > 0) { %>
                <% theSearchesPG.forEach(search => { %>
                    <b> - <%= search.year %> <%= search.brand %> <%= search.model %> <%= search.cost %></b> <br>
                    <p> <%= search.colour %> <%= search.vin %> <br>
                        <%= search.country %> <%= search.city %> <%= search.address %>
                    </p> 
                    
                    <% }) %>
            <% } %>
        </div>
    </div>
    </body>
</html>